mixin notification-success-BE(timeExpired = 3000)
   - if(messages.success)
      div(
         class="alert alert-success show-notification fade-in-be"
         show-notification=timeExpired
      )
         span(class="inner-icon") <i class="fa-regular fa-circle-check"></i>
         div(class="inner-content") #{messages.success}

mixin notification-success-FE(timeExpired = 3000)
   div(
      class="alert alert-success show-notification element-hidden"
      show-notification-fe=timeExpired
   )
      span(class="inner-icon") <i class="fa-regular fa-circle-check"></i>
      div(class="inner-content")


mixin notification-error-BE(timeExpired = 3000)
   - if(messages.error)
      div(
         class="alert alert-danger show-notification fade-in-be"
         show-notification=timeExpired
      )
         span(class="inner-icon") <i class="fa-regular fa-circle-xmark"></i>
         div(class="inner-content") #{messages.error}


