mixin pagination-bar(pagination)
   nav 
      ul(class="pagination justify-content-center")

         //-------------Prepare----------------//
         - const pagesShow = 7;
         - let startPageShow = pagination.currentPage - Math.floor(pagesShow / 2);
         - let endPageShow = pagination.currentPage + Math.floor(pagesShow / 2);

         - if(startPageShow <=1)
            - const actualDifference = 1 - startPageShow;
            - startPageShow = 1;
            - endPageShow = endPageShow + actualDifference;
         
         - if(endPageShow >= pagination.totalPage)
            - const actualDifference = endPageShow - pagination.totalPage;
            - endPageShow = pagination.totalPage;
            - startPageShow = startPageShow - actualDifference;
         //-------------End prepare----------------//


         //-------------Start paging----------------//
         - if(pagination.currentPage > 1)                     
            li(class="page-item")
               button(class="page-link" button-pagination=1) Trang đầu
            li(class="page-item")
               button(class="page-link" button-pagination=pagination.currentPage-1) Trang trước


         - if(startPageShow > 1)
            li(class="page-item disabled")
               button(class="page-link") ...         

         - for(let i = startPageShow; i <= endPageShow; i++)
            li( class=("page-item" + (pagination.currentPage == i ? " active" : "")) )
               button(
                  class="page-link" 
                  button-pagination=i
               ) #{i}

         - if(endPageShow < pagination.totalPage)
            li(class="page-item disabled")
               button(class="page-link") ...


         - if(pagination.currentPage < pagination.totalPage)
            li(class="page-item")
               button(class="page-link" button-pagination=pagination.currentPage+1) Kế tiếp
            li(class="page-item")
               button(class="page-link" button-pagination=pagination.totalPage) Trang cuối
         
         //-------------End paging----------------//