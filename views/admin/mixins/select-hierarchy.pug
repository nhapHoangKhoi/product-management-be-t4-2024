mixin select-hierarchy(listOfItems, level = 1)
   each itemParent in listOfItems
      - const prefix = Array(level + 1).join("--")

      option(value=`${itemParent.id}`) #{prefix} #{itemParent.title}

      if(itemParent.children)
         +select-hierarchy(itemParent.children, level + 1)


