extends ../../layouts/default.pug

block main 
   
   //- h1(class="mb-4") Trang chỉnh sửa tài khoản admin
   h1(class="mb-4") Chỉnh sửa tài khoản admin

   form(
      action=`/${prefixAdmin}/accounts/edit/${theAccountData.id}?_method=PATCH`
      method="POST"
      enctype="multipart/form-data"
   )
      div(class="form-group")
         label(for="fullName") Họ tên *
         input(
            type="text"
            class="form-control"
            id="fullName"
            name="fullName"
            required
            value=theAccountData.fullName
         )

      div(class="form-group")
         label(for="email") Email *
         input(
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
            value=theAccountData.email
         )

      div(class="form-group")
         label(for="password") Mật khẩu
         input(
            type="password"
            class="form-control"
            id="password"
            name="password"
         )

      div(class="form-group")
         label(for="phone") Số điện thoại
         input(
            type="text"
            class="form-control"
            id="phone"
            name="phone"
            value=theAccountData.phone
         )

      div(
         class="form-group"
         upload-image
      )
         label(for="avatar") Avatar
         input(
            type="file"
            class="form-control-file"
            id="avatar"
            name="avatar"
            accept="image/*"
            upload-image-input
         )
         img(
            src=theAccountData.avatar
            class="image-preview"
            upload-image-preview
         )

      div(class="form-group")
            label(for="role_id") Phân quyền
            select(name="role_id" id="role_id" class="form-control")
               option(disabled) -- Chọn --
               each aRole in listOfRoles
                  option(
                     value=aRole.id
                     selected=(aRole.id == theAccountData.role_id ? true : false)
                  ) #{aRole.title}

      div(class="form-group form-check form-check-inline")
         input(
            type="radio"
            class="form-check-input"
            id="statusActive"
            name="status"
            value="active"
            checked=(theAccountData.status == "active" ? true : false)
         )
         label(for="statusActive" class="form-check-label") Hoạt động
      
      div(class="form-group form-check form-check-inline")
         input(
            type="radio"
            class="form-check-input"
            id="statusInActive"
            name="status"
            value="inactive"
            checked=(theAccountData.status == "inactive" ? true : false)
         )
         label(for="statusInActive" class="form-check-label") Dừng hoạt động
      
      div(class="form-group")
         button(
            type="submit"
            class="btn btn-primary"
         ) Cập nhật