extends ../../layouts/default.pug

block main

   h1(class="mb-4") Tạo mới nhóm quyền

   form(
      action=`/${prefixAdmin}/roles/create`
      method="POST"
   )
      div(class="form-group")
         label(for="title") Tiêu đề
         input(
            type="text"
            class="form-control"
            id="title"
            name="title"
            required
         )

      div(class="form-group")
         label(for="description") Mô tả
         input(
            type="text"
            class="form-control"
            id="description"
            name="description"
         )

      div(class="form-group")
         button(
            type="submit"
            class="btn btn-primary"
         ) Tạo mới