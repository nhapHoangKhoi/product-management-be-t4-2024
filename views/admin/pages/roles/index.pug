extends ../../layouts/default.pug

block main 

   //- h1(class="mb-4") Trang Nhóm quyền
   h1(class="mb-4") Nhóm quyền

   .card.mb-3
      .card-header Danh sách 
      .card-body 
         .row 
            .col-8 
            .col-4.text-right 
               a(
                  href=`/${prefixAdmin}/roles/create`
                  class="btn btn-outline-info mb-4"
               ) + Thêm mới

         table(
            class="table table-hover table-sm"
         )
            thead
               tr
                  th STT
                  th Nhóm quyền
                  th Mô tả ngắn
                  th Hành động
            tbody
               if(listOfRoles.length > 0)
                  each aRole, index in listOfRoles
                     tr
                        td #{index + 1}
                        td #{aRole.title}
                        td #{aRole.description}
                        td
                           a(
                              class="btn btn-secondary btn-sm"
                              href=`/${prefixAdmin}/roles/detail/${aRole.id}`
                           ) Chi tiết
                           a(
                              class="btn btn-warning btn-sm ml-1"
                              href=`/${prefixAdmin}/roles/edit/${aRole.id}`
                           ) Sửa
                           button(
                              class="btn btn-danger btn-sm ml-1"
                           ) Xóa
               else
                  tr
                     td(colspan="4" class="text-center") Chưa có nhóm quyền nào được tạo.