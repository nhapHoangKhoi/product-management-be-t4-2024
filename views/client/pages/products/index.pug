extends ../../layouts/default.pug

include ../../mixins/box-head.pug

block main 
   .container.my-3 
      .row 
         .col-12
            +box-head("Danh sách sản phẩm")

      .row
         each aProduct in listOfProducts
            .col-4.mb-3 
               .product-item
                     .inner-image
                        a(href=`/products/${aProduct.slug}`) 
                           img(src=aProduct.thumbnail, alt="Mascara")
                     .inner-content
                        h3.inner-title 
                           a(href=`/products/${aProduct.slug}`) #{aProduct.title}
                        .inner-price-new #{aProduct.priceNew}$
                        .inner-price-old #{aProduct.price}$
                        .inner-discount -#{aProduct.discountPercentage}%