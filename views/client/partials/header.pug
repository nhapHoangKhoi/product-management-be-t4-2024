include ../mixins/sub-menu.pug

header.header
   .container 
      .row.align-items-center 
         .col-3 
            .inner-logo 
               a(href="/")
                  img(src="/images/logo.svg", alt="Logo")

         .col-4
            form(
               action="/search"
               method="GET"
            )
               div(class="form-group d-flex mb-0")
                  input(
                     type="text"
                     placeholder="Nhập từ khóa..."
                     class="form-control"
                     name="inputKeyword"
                     value=inputKeyword
                  )
                  button(
                     type="submit"
                     class="btn btn-primary"
                  ) Tìm

         .col-5 
            .inner-menu 
               ul 
                  li 
                     a(href="/") Trang chủ
                  li(class="sub-menu") 
                     a(href="/products") Sản phẩm

                     - if(layoutProductCategories)
                        +sub-menu(layoutProductCategories)
                  li
                     a(href="/cart") Giỏ hàng (#{totalProductsInCart})

                  - if(theUser)
                     li 
                        a(href="/user/logout") Đăng xuất
                  - else
                     li
                        a(href="/user/login") Đăng nhập

                     li
                        a(href="/user/register") Đăng ký